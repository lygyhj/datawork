<!-- 用户信息卡片 -->
<view class="profile-container">
  <view class="profile-card">
    <image class="avatar" 
           src="{{userInfo.avatarUrl || '/images/default-avatar.png'}}" 
           bindtap="showEditDialog"></image>
    <text class="username">{{userInfo.nickName || '微信用户'}}</text>
    
    <view class="stats-container">
      <view class="stat-item">
        <text class="stat-number">{{postCount}}</text>
        <text class="stat-label">发布</text>
      </view>
      <view class="stat-item">
        <text class="stat-number">{{favoriteCount}}</text>
        <text class="stat-label">收藏</text>
      </view>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-item" bindtap="navigateToMySend">
    <image src="/images/icon-post.png" class="menu-icon"></image>
    <text>我的发布</text>
    <image src="/images/arrow-right.png" class="arrow"></image>
  </view>
</view>

<!-- 修改资料弹窗 -->
<view class="edit-dialog" wx:if="{{showDialog}}">
  <view class="dialog-mask" bindtap="hideEditDialog"></view>
  <view class="dialog-content">
    <view class="dialog-header">
      <text class="title">修改资料</text>
      <text class="close-btn" bindtap="hideEditDialog">×</text>
    </view>
    
    <view class="form-group">
      <text class="label">昵称</text>
      <input class="input" 
             type="text" 
             value="{{editingName}}" 
             bindinput="onNameInput" 
             placeholder="请输入昵称"/>
    </view>
    
    <view class="form-group">
      <text class="label">头像</text>
      <view class="avatar-uploader">
        <image class="preview" src="{{tempAvatar || userInfo.avatarUrl || '/images/default-avatar.png'}}"></image>
        <button class="upload-btn" bindtap="chooseAvatar">更换头像</button>
      </view>
    </view>
    
    <button class="save-btn" bindtap="saveUserInfo" loading="{{isSaving}}">保存修改</button>
  </view>
</view>

<!-- 底部导航 -->
<view class="tab-bar">
  <view wx:for="{{tabs}}" wx:key="index" 
        class="tab-item {{activeIndex === index ? 'active' : ''}}" 
        bindtap="switchTab" data-index="{{index}}">
    <text>{{item.text}}</text>
  </view>
</view>