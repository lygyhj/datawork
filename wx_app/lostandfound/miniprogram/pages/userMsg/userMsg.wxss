/* 基础样式 */
page {
  background-color: #f7f7f7;
  padding-bottom: 100rpx;
}

/* 用户信息卡片 */
.profile-container {
  padding: 30rpx;
}

.profile-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 2rpx solid #f1f1f1;
  margin-bottom: 20rpx;
}

.username {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
  color: #333;
}

.stats-container {
  display: flex;
  width: 100%;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 38rpx;
  font-weight: bold;
  color: #07C160;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 菜单项 */
.menu-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.arrow {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  right: 30rpx;
}

/* 弹窗样式 */
.edit-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.dialog-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.dialog-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.dialog-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
}

.form-group {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.label {
  display: block;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.avatar-uploader {
  display: flex;
  align-items: center;
}

.preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 1rpx solid #eee;
}

.upload-btn {
  background: #f8f8f8;
  color: #333;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
}

.save-btn {
  background: #07C160;
  color: #fff;
  margin: 30rpx;
  border-radius: 8rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

/* 底部导航 */
.tab-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  font-size: 24rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-item.active {
  color: #07C160;
  font-weight: bold;
}