.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 0 30rpx;
  background-color: #f8f8f8;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.logo-container image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.auth-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.auth-tip {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.auth-btn {
  width: 100%;
  height: 90rpx;
  background-color: #07C160;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
}

.auth-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.policy-container {
  position: absolute;
  bottom: 50rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.policy-link {
  color: #576B95;
  margin: 0 5rpx;
}